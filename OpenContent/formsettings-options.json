{
    "fields": {
        "Notifications": {
        
            "titleField": "EmailSubject",
            "items": {

              "fields": {
                "From": {
                  "title": "From",
                  "type": "select",
                  "optionLabels": [ "Host", "Site Admin", "Form Field", "Custom", "Current Dnn user" ],
                  "removeDefaultNone": true,
                  "helper": "Sender"
                },
                "FromName": {
                  "type": "mltext",
                  "dependencies": {
                    "From": "custom"
                  },
                  "helper": "Name part of the email address (optional)"
                },
                "FromEmail": {
                  "type": "mltext",
                  "dependencies": {
                    "From": "custom"
                  },
                  "helper": "Email address of the sender"
                },
                "FromNameField": {
                  "dependencies": {
                    "From": "form"
                  },
                  "helper": "Name of the field where the name is extracted (optional)"
                },
                "FromEmailField": {
                  "dependencies": {
                    "From": "form"
                  },
                  "helper": "Name of the field where the email is extracted"
                },
                "To": {
                  "type": "select",
                  "optionLabels": [ "Host", "Site Admin", "Form Field", "Custom", "Current Dnn user" ],
                  "removeDefaultNone": true,
                  "helper": "Recipient"
                },
                "ToName": {
                  "type": "mltext",
                  "dependencies": {
                    "To": "custom"
                  },
                  "helper": "Name part of the email address (optional)"
                },
                "ToEmail": {
                  "type": "mltext",
                  "dependencies": {
                    "To": "custom"
                  },
                  "helper": "Email address of the recipient"
                },
                "ToNameField": {
                  "dependencies": {
                    "To": "form"
                  },
                  "helper": "Name of the field where the name is extracted (optional)"
                },
                "ToEmailField": {
                  "dependencies": {
                    "To": "form"
                  },
                  "helper": "Name of the field where the email is extracted"
                },
                "ReplyTo": {
                  "type": "select",
                  "optionLabels": [ "Host", "Site Admin", "Form Field", "Custom", "Current Dnn user" ],
                  "helper": "Reply-to"
                },
                "ReplyToName": {
                  "type": "mltext",
                  "dependencies": {
                    "ReplyTo": "custom"
                  },
                  "helper": "Name part of the email address (optional)"
                },
                "ReplyToEmail": {
                  "type": "mltext",
                  "dependencies": {
                    "ReplyTo": "custom"
                  },
                  "helper": "Email address of the reply-to"
                },
                "ReplyToNameField": {
                  "dependencies": {
                    "ReplyTo": "form"
                  },
                  "helper": "Name of the field where the name is extracted (optional)"
                },
                "ReplyToEmailField": {
                  "dependencies": {
                    "ReplyTo": "form"
                  },
                  "helper": "Name of the field where the email is extracted"
                },
                "CcEmails": {
                  "type": "mltext"
                },
                "BccEmails": {
                  "type": "mltext"
                },
                "EmailSubject": {
                  "type": "mltext",
                  "helper": "Subject of the email"
                },
                "EmailBodyType": {
                  "type": "select",
                  "optionLabels": [ "Html Editor", "Raw Html" ],
                  "noneLabel": "Default",
                  "helper": "Type of the email body (Html editor or Raw html)"
                },
                "EmailBody": {
                  "type": "mlckeditor",
                  "dependencies": {
                    "EmailBodyType": "html"
                  },
                  "helper": "Body of the email"
                },
                "EmailRaw": {
                  "type": "mlraw",
                  "dependencies": {
                    "EmailBodyType": "raw"
                  },
                  "helper": "Body of the email"
                }
              }
            }
        },
        "Settings": {
            "fields": {
                "Message": {
                    "type": "mlckeditor",
                    "helper": "Message after submit"
                },
                "Captcha": {
                    "helper": "Show Captcha"
                },
                "Tracking": {
                    "type": "textarea",
                    "hidden": true,
                    "helper": "Tracking script (Adwords, ...)"
                },
                "SiteKey": {
                    "hidden": true,
                    "helper": "reCaptcha Site Key"
                },
                "SecretKey": {
                    "hidden": true,
                    "helper": "reCaptcha Secret Key"
                }
            }
        }
    }
